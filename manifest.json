{
  "manifest_version": 3,
  "name": "Kick Cleaner",
  "version": "1.0.0",
  "description": "Minimal, distraction-free Kick.com: hides sidebar, chat, and channel player; blurs images and hides video. Optional verified-links highlights on category pages.",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Kick Cleaner â€“ Extension info"
  },
  "content_scripts": [
    {
      "matches": ["https://kick.com/*", "https://www.kick.com/*"],
      "css": ["src/content/content.css"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ]
}
